<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ananta.fieldAgent.Activity.fieldAgent.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/round_bg_globle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_profile"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/dashboard"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"/>

            <ImageView
                android:id="@+id/ivSignout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bg_green_add"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/signout"/>
            <ImageView
                android:id="@+id/ivAddReqImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bg_green_add"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/user"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>