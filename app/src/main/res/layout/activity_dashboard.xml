<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DashboardActivity">


    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_bg_globle"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/dashboard"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>

        <ImageView
            android:id="@+id/ivSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_green_add"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/signout" />

        <ImageView
            android:id="@+id/ivAddReqImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_green_add"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/user"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_220sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/llToolbar"/>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_16sdp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/llFarmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/farmer"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farmer"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mechanic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textAlignment="center"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>